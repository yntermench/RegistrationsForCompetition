@model RegistrationsForCompetition.Models.Player
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
<title>Регистрация</title>
<meta name="viewport" content="width=device-width" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <header class="card-header">
        <div class="text-center">
            <h1>Добро пожаловать на @ViewBag.SiteName турнира</h1>
            <h2>Введите данные для регистрации в турнире</h2>
        </div>
    </header>
    <div class="card-body">
        <form class="p-1" method="post" asp-action="Index">
            <div class="list-group-item-warning" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Login">Введите свой логин:</label>
                <input class = "form-control" asp-for="Login"/>
            </div>

            <div class="form-group">
                <label asp-for="Email">Введите свою почту:</label>
                <input class="form-control" asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Введите свой пароль:</label>
                <input class="form-control" asp-for="Password" />
            </div>

            <div class="form-group">
                <label asp-for="Level">Введите свой уровень:</label>
                <input class="form-control" asp-for="Level" />
            </div>

            <div class="form-group">
                <label asp-for="CountPP">Введите своё количество pp:</label>
                <input class="form-control" asp-for="CountPP" />
            </div>

            <div class="form-group">
                <label>Вы играли в мультиплеер?</label>
                <select class="form-control" asp-for="Multiplayer">
                    <option value="">Выберите вариант</option>
                    <option value="true">Да, играл</option>
                    <option value="false">Нет, не играл</option>
                </select>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</body>
</html>